{
  "name": "reactifyme",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.1.6",
    "@storybook/react": "^3.1.6",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.0.2",
    "react-scripts": "1.0.7",
    "react-test-renderer": "^15.6.1",
    "redux-immutable-state-invariant": "^2.0.0"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "font-awesome": "^4.7.0",
    "react": "^15.5.4",
    "react-bootstrap": "^0.31.0",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^3.0.5",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "start": "npm-run-all -p watch:css start:js",
    "start:js": "react-scripts start",
    "build": "npm run build:css && react-scripts build",
    "build:css": "node-sass-chokidar --include-path ./src src/ -o src/",
    "watch:css": "npm run build:css && node-sass-chokidar --include-path ./src src/ -o src/ --watch --recursive",
    "test": "react-scripts test --verbose --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9001 -s ./public -c src/storybook"
  }
}
